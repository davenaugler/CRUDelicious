@model Dish

<div class="row text-left mt-4">
</div>
<div class="row">
  <div class="col text-center mt-3">
    <h1>@Model.Name</h1>
    <h5>by @Model.Chef</h5>
  </div>
</div>
<div class="row mt-3">
  <div class="col">
    <p><span class="bolder-font">Description: </span>@Model.Description</p>
    <p><span class="bolder-font">Calories: </span>@Model.Calories</p>
    <p><span class="bolder-font">Tastiness: </span>@Model.Tastiness/5</p>
  </div>
</div>

<div class="row text-center mt-4">
  <div class="col">
    <form action="delete/@Model.dishId" method="post">
      <button class="btn btn-danger mr-2" type="submit">Delete</button>
    </form>
  </div>
  <div class="col">
    <a href="/edit/@Model.dishId" class="btn btn-primary pr-4 pl-4 ml-2">Edit</a>
  </div>
</div>